<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Add new hike"
             x:Class="HikeManagement.View.AddHike">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry Placeholder="Name"
                   x:Name="nameEnter"/>
            <Entry Placeholder="Location"
                   x:Name="locationEnter"/>
            <Entry Placeholder="Date"
                   x:Name="dateEnter"/>
            <Entry Placeholder="Parking"
                   x:Name="parkingEnter"/>
            <Entry Placeholder="Description"
                   x:Name="descriptionEnter"/>
            <Entry Placeholder="Length"
                   x:Name="lengthEnter"/>
            <Entry Placeholder="Level"
                   x:Name="levelEnter"/>
            <Entry Placeholder="Cost"
                   x:Name="costEnter"/>
            <Entry Placeholder="Weather"
                   x:Name="weatherEnter"/>
            <Button Text="Save"
                    Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>